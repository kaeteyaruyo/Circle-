extends /base.pug

append stylesheets
  link( rel = 'stylesheet', href = `/css/index.css`)

append content
  form.main__username( action = '/', method = 'post' )
    input.main__username--text( type = 'text', name = 'username', placeholder = 'Enter your name', pattern = "[^(\\\\ \\\^ \\\$ \\\* \\\+ \\\? \\\. \\\( \\\) \\\| \\\{ \\\} \\\[ \\\])]*", autocomplete = 'off', required, autofocus )
    button.main__username--submit( type = 'submit' )
      i.fas.fa-arrow-right

append scripts
  script( src = `/js/index.js` )
